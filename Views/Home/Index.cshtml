@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bem-Vindo ao sistema da Industria Alimenticia de Delícias</h1>
</div>
<div class="container">
    <div class="row">
        <!-- Coluna A Fazer -->
        <div class="col-md-4">
            <h3>A Fazer</h3>
            <div class="card">
                <div class="card-body">
                    <p><strong>Descrição:</strong> Descrição da tarefa de Alta Prioridade</p>
                    <p><strong>Setor:</strong> Setor Y</p>
                    <p><strong>Prioridade:</strong> Alta</p>
                    <p><strong>Vinculado a:</strong> Usuário A</p>
                    <a asp-controller="Tarefas" asp-action="index" class="btn btn-primary">Editar</a>
                    <a asp-controller="Tarefas" asp-action="index" class="btn btn-danger">Excluir</a>

                    <hr>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status1" value="A Fazer" checked>
                        <label class="form-check-label">A Fazer</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status1" value="Fazendo">
                        <label class="form-check-label">Fazendo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status1" value="Pronto">
                        <label class="form-check-label">Pronto</label>
                    </div>
                    <button class="btn btn-secondary mt-2">Alterar Status</button>
                </div>
            </div>
        </div>

        <!-- Coluna Fazendo -->
        <div class="col-md-4">
            <h3>Fazendo</h3>
            <div class="card">
                <div class="card-body">
                    <p><strong>Descrição:</strong> Descrição da tarefa de Baixa Prioridade</p>
                    <p><strong>Setor:</strong> Setor F</p>
                    <p><strong>Prioridade:</strong> Baixa</p>
                    <p><strong>Vinculado a:</strong> Usuário C</p>
                    <a asp-controller="Tarefas" asp-action="index" class="btn btn-primary">Editar</a>
                    <a asp-controller="Tarefas" asp-action="index" class="btn btn-danger">Excluir</a>

                    <hr>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status2" value="A Fazer">
                        <label class="form-check-label">A Fazer</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status2" value="Fazendo" checked>
                        <label class="form-check-label">Fazendo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status2" value="Pronto">
                        <label class="form-check-label">Pronto</label>
                    </div>
                    <button class="btn btn-secondary mt-2">Alterar Status</button>
                </div>
            </div>
        </div>

        <!-- Coluna Pronto -->
        <div class="col-md-4">
            <h3>Pronto</h3>
            <div class="card">
                <div class="card-body">
                    <p><strong>Descrição:</strong> Descrição da tarefa concluída</p>
                    <p><strong>Setor:</strong> Setor H</p>
                    <p><strong>Prioridade:</strong> Média</p>
                    <p><strong>Vinculado a:</strong> Usuário D</p>
                    <a asp-controller="Tarefas" asp-action="index" class="btn btn-primary">Editar</a>
                    <a asp-controller="Tarefas" asp-action="index" class="btn btn-danger">Excluir</a>

                    <hr>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status3" value="A Fazer">
                        <label class="form-check-label">A Fazer</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status3" value="Fazendo">
                        <label class="form-check-label">Fazendo</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="status3" value="Pronto" checked>
                        <label class="form-check-label">Pronto</label>
                    </div>
                    <button class="btn btn-secondary mt-2">Alterar Status</button>
                </div>
            </div>
        </div>
    </div>
</div>

